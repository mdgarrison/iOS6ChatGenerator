<UserControl x:Class="WpfApplication2.TextBubbleRight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication2"
             mc:Ignorable="d" d:DesignWidth="330">
    <Grid>
        <Canvas x:Name="ucCanvas">
            <StackPanel>
            <Image x:Name="UpperImage" Source="msg_blue.jpg" Stretch="None"/>
            <Image x:Name="LowerImage" Source="msg_blue_bottom.jpg" Stretch="None" Canvas.Top="26" Canvas.Left="-1"/>
            </StackPanel>
            <TextBlock x:Name="message" FontSize="24" FontFamily="Ariel" TextWrapping="Wrap" Width="290" Canvas.Top="10" Canvas.Left="30" Foreground="Black"/>
        </Canvas>
    </Grid>
</UserControl>
